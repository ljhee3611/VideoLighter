{
    "$schema": "https://schema.tauri.app/config/2",
    "productName": "VideoLighter",
    "version": "1.0.1",
    "identifier": "com.smileon.videolighter",
    "build": {
        "beforeDevCommand": "npm run dev",
        "devUrl": "http://localhost:1420",
        "beforeBuildCommand": "npm run build",
        "frontendDist": "../dist"
    },
    "app": {
        "windows": [
            {
                "title": "VideoLighter",
                "width": 1200,
                "height": 850
            }
        ],
        "security": {
            "csp": null
        }
    },
    "bundle": {
        "active": true,
        "targets": [
            "msi"
        ],
        "icon": [
            "icons/32x32.png",
            "icons/128x128.png",
            "icons/128x128@2x.png",
            "icons/icon.icns",
            "icons/icon.ico"
        ],
        "externalBin": [
            "ffmpeg",
            "ffprobe"
        ],
        "windows": {
            "wix": {
                "upgradeCode": "F2E8B7D8-4B67-4A9C-9E48-6FAEE243C1E2"
            }
        }
    }
}
